<div class="container">
  <h1>New Game</h1>
  <div style="display:flex">
  <% @letters.each do |letter| %>
    <div style="background-color:#3597DB" class="m-3">
      <p style="padding: 20px; color: white"><%= letter %></p>
    </div>
    <% end %>
  </div>

  <p>What is the longest word you can find?</p>
  <form action="/score" data-turbo="false" method="post" style="display: flex">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" class="form-control">
    <input type="submit" value="play" class="btn">
  </form>
</div>
